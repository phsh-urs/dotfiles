battery_level {
  battery_id = 0
  format = "{icon}{percent}%"
  measurement_mode = "sys"
  threshold_degraded = 40
  threshold_bad = 20
}

clock {
  format_time = "{icon}[\?color=pink&show  %A][\?color=white&show  %d/%-m]\?color=cyan&show  %R"
  locale = "pt_BR.UTF-8"
  round_to_nearest_block = False
}

